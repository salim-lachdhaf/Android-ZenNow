<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ButtonClickColor" />
            <corners android:radius="0px"/>
            <stroke  android:width="1dp" android:color="@color/ButtonClickColor"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ButtonFocusedColor" />
            <corners android:radius="0px"/>
            <stroke  android:width="1dp" android:color="@color/ButtonFocusedColor"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ButtonClickColor" />
            <corners android:radius="0px"/>
            <stroke  android:width="1dp" android:color="@color/ButtonClickColor"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/ButtonDefaultColor"/>
            <corners android:radius="0px"/>
            <stroke  android:width="1dp" android:color="@color/ButtonDefaultColor"/>
        </shape>
    </item>

</selector>